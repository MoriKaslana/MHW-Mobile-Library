<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logiwallpaper"
    tools:context=".SignUp">
//
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="226dp"
        android:layout_height="122dp"
        android:layout_x="84dp"
        android:layout_y="58dp"
        app:srcCompat="@drawable/round_lens_24" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="778dp"
        android:layout_x="-8dp"
        android:layout_y="-4dp"
        app:srcCompat="@drawable/square" />

    <ProgressBar
        android:id="@+id/progressBarS"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ProgressBar>

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_default_radius"
        android:layout_x="146dp"
        android:layout_y="440dp"
        android:text="Sign Up" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="99dp"
        android:layout_y="371dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="106dp"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="311dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email Address"
        android:textColor="@color/black" />


</AbsoluteLayout>